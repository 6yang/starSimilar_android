<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照" />

            <Button
                android:id="@+id/choose_from_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从相册中选择" />

            <Button
                android:id="@+id/upload_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和我最像的女演员" />

            <Button
                android:id="@+id/upload_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和我最像的男演员" />
            <Button
                android:id="@+id/showOursName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="看看图中都有谁"
                />

            <ImageView
                android:id="@+id/picture"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/star_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/star_picture"
                    android:layout_width="200dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/show_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/show_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="相似度高达" />

                <TextView
                    android:id="@+id/show_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/show_json"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>